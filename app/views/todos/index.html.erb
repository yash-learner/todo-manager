<article>
  <h1 class="TodoPage-title">My To-do List</h1>
  <%= form_with(url: "/todos", method: "post", class: "AddTodo") do %>
    <%= text_field_tag("todo_text", nil, class: "AddTodo-text", placeholder: "What's next?", autofocus: true) %>
    <%= date_field_tag("due_date", nil, class: "AddTodo-date") %>
    <%= submit_tag("Add", class: "AddTodo-button") %>
  <% end %>

  <%= render partial: "todo-section", locals: {
               section_title: "Overdue",
               todos: Todo.overdue,
               show_due_date: true,
             } %>
  <%= render partial: "todo-section", locals: {
               section_title: "Due Today",
               todos: Todo.due_today,
               show_due_date: false,
             } %>
  <%= render partial: "todo-section", locals: {
               section_title: "Due Later",
               todos: Todo.due_later,
               show_due_date: true,
             } %>
</article>
