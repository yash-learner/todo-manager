<article>
  <h1 class="TodoPage-title">My To-do List</h1>
    <section class="AddTodo">
      <input
        class="AddTodo-text"
        type="text"
        name="todo"
        placeholder="What's next?"
      />
      <input class="AddTodo-date" type="date" name="date" />
      <input class="AddTodo-button" type="button" value="Add" />
    </section>

  <%= render partial: "todo-section", locals: {
               section_title: "Overdue",
               todos: Todo.overdue,
               show_due_date: true,
             } %>
  <%= render partial: "todo-section", locals: {
               section_title: "Due Today",
               todos: Todo.due_today,
               show_due_date: false,
             } %>
  <%= render partial: "todo-section", locals: {
               section_title: "Due Later",
               todos: Todo.due_later,
               show_due_date: true,
             } %>
</article>
